<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">


<LinearLayout android:id="@+id/LinearLayout03" android:gravity="left" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

<ImageView android:id="@+id/ImageView01" android:paddingLeft="10px" android:gravity="left" android:layout_width="50px" android:layout_height="50px" android:background="@drawable/rrr" android:layout_marginTop="10dip">
</ImageView>
<TextView
android:id="@+id/widget47"
android:layout_marginTop="10dip"
android:layout_width="wrap_content"
android:layout_height="40px"
android:background="#000000"
android:paddingLeft="10px"
android:text="FAVORITE PREDICTION"
android:textSize="20sp"
android:typeface="serif"
android:textStyle="bold"
android:textColor="#FF3333"
android:gravity="center"
>
</TextView>
</LinearLayout>

  <LinearLayout
  		android:background="#333333"
  		android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:layout_weight="0.17"
        >   

        <ListView android:id="@+id/android:list"
        android:layout_width="fill_parent" 
        android:layout_height="200px" 
        android:dividerHeight="2px">
                 </ListView>
                   
    </LinearLayout> 

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="260dp" 
    android:gravity="center"
    > 


                <Button                      
                     android:id="@+id/ButtonFavorite"
                     android:layout_marginTop="5dip"
                     android:layout_width="280dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:paddingRight="20px"
                     android:gravity="center"
                     android:text="MORE FAVORITES"
                     android:textStyle="bold"
                     android:textSize="18sp"
                     />
                     
                     



   <TextView android:id="@+id/TextView02"
   			android:layout_marginTop="5dip" 
		  android:layout_height="wrap_content" 
		  android:layout_width="280dp"
		  android:textColor="#FF3333"
		  android:textSize="17sp"
		  android:textStyle="bold"
		  android:gravity="center"
		  android:text="GET NEW PREDICTION"></TextView>
		  

		  
<Spinner
		android:layout_height="wrap_content" 
		android:layout_marginTop="5dip"
		android:layout_width="280dp"
		android:gravity="left"   
		android:textStyle="bold"
		android:textSize="18sp"
		android:id="@+id/SpinnerRoute"></Spinner>


	<Spinner
		android:layout_height="wrap_content"
		 android:layout_marginTop="5dip"
		 android:layout_width="280dp"
		 android:gravity="left"
		 android:textStyle="bold"
		 android:textSize="18sp" 
		 android:id="@+id/SpinnerStop"></Spinner>


</LinearLayout>
</LinearLayout>
