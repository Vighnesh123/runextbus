<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">


<LinearLayout android:id="@+id/LinearLayout03" android:gravity="left" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

<ImageView android:id="@+id/ImageView01" android:paddingLeft="10px" android:gravity="left" android:layout_width="50px" android:layout_height="50px" android:background="@drawable/rrr" android:layout_marginTop="10dip">
</ImageView>
<TextView
android:id="@+id/widget47"
android:layout_marginTop="10dip"
android:layout_width="wrap_content"
android:layout_height="40px"
android:background="#000000"
android:paddingLeft="10px"
android:text="FAVORITE PREDICTION"
android:textSize="18sp"
android:typeface="serif"
android:textStyle="bold"
android:textColor="#FF3333"
android:gravity="center"
>
</TextView>
</LinearLayout> 
	
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:weightSum="1" android:layout_height="match_parent">
    <LinearLayout android:layout_marginTop="5dip" android:background="#333333" android:orientation="horizontal" android:textSize="14sp" android:layout_height="101dp" android:layout_width="273dp">
        <ProgressBar android:layout_width="wrap_content" android:id="@+id/progressbar" android:layout_height="wrap_content"></ProgressBar>
        <ListView android:dividerHeight="1px" android:layout_width="266dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/android:list"></ListView>
    </LinearLayout>
    <Button android:textStyle="bold" android:textSize="18sp" android:id="@+id/ButtonFavorite" android:paddingRight="20px" android:text="MORE FAVORITES" android:gravity="center" android:layout_width="280dp" android:layout_marginTop="5dip" android:layout_height="wrap_content"></Button>
                     
          <TextView android:id="@+id/TextView02"
   		  android:layout_marginTop="5dip" 
		  android:layout_height="wrap_content" 
		  android:layout_width="280dp"
		  android:textColor="#FF3333"
		  android:textSize="17sp"
		  android:textStyle="bold"
		  android:gravity="center"
		  android:text="GET NEW PREDICTION"></TextView>
		  

		  
<Spinner
		android:layout_height="wrap_content" 
		android:layout_marginTop="5dip"
		android:layout_width="280dp"
		android:gravity="left"   
		android:textStyle="bold"
		android:textSize="18sp"
		android:id="@+id/SpinnerRoute"></Spinner>

<Spinner
		android:layout_height="wrap_content" 
		android:layout_marginTop="5dip"
		android:layout_width="280dp"
		android:gravity="left"   
		android:textStyle="bold"
		android:textSize="18sp"
		android:id="@+id/SpinnerDir"></Spinner>

	<Spinner
		android:layout_marginTop="5dip"
		 android:layout_width="280dp"
		 android:gravity="left"
		 android:textStyle="bold"
		 android:textSize="18sp" 
		 android:id="@+id/SpinnerStop" android:layout_height="wrap_content"></Spinner>

</LinearLayout>
</LinearLayout>
